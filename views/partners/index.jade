extends ../layout

block content
  .container-fluid
    include ../includes/large-logo-header.jade            
    if users
    .row
      .mainthings.table-responsive.col-sm-12.col-md-8.col-md-offset-2
        h1 Partner Companies
        table.table.table-striped
          for user in users 
            tr
              td
                h3 #{user.name}
              td   
                a(href="/#{user.username}/freebies") View this Partner's events       
              td
                a(href="#{user.url}") Visit #{user.name}'s website
    include ../includes/footer.jade            
