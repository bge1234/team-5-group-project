extends ./layout

block content
  .container-fluid
    include ../includes/partner-link.jade
    include ../includes/large-logo-header.jade  
    .row
      .mainthings.col-sm-12.col-md-8.col-md-offset-2(style="height:375px; padding:100px; text-align:center; margin-bottom: 75px;")
        h2 find free things to do
        form(method='post' action='/splash')
          .col-sm-12.col-md-6.col-md-offset-3
            .form-group
              if categories
                p  
                select.form-control(name="category" id="category")
                  for category in categories
                    option(value=category.name selected=(category ? (catname === category.name ? "selected" : undefined) : undefined)) #{category.name}
            .form-group.footer
              button.btn.btn-default.form-control(id="searchfreebies" type="submit") Submit 
      .mainthings.col-sm-12.col-md-8.col-md-offset-2(style="height:375px; padding:100px; text-align:center; margin-bottom: 75px;")
        h2 find free things
        form(method='post' action='/freethings')
          .col-sm-12.col-md-6.col-md-offset-3
            .form-group
              input.form-control#freethingsearch(type="text" placeholder="What are you hoping to find?" name="freethingsearch")
            .form-group.footer
              button.btn.btn-default.form-control(id="searchfreebies" type="submit") Search 
    include ../includes/footer.jade  
