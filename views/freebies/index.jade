extends ../layout

block content
  h1 This is the activies show page
  a.createFreebie(href="freebies/new") Create Freebie
  a.mapLink(href="/map") Freebie Map
  .calendar
    for freebie in freebies 
      .event
        .freebieTitle= freebie.name
        .location
          a(href="/mapsearch?location=#{freebie.location}") #{freebie.location}
        a.edit(href="/freebies/" + freebie.id + '/edit') Edit
    for event in events 
      li: a(href=''+event.event_url+'')= event.name 
