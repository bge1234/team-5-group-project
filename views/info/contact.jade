extends ../layout

block content

  .container-fluid
    include ../../includes/large-logo-header.jade  
    .row
      .mainthings.col-sm-12.col-md-8.col-md-offset-2
        h3 Contact Us
        form(action='/email' method='post')
          p
            label(for="email") Email
            br
            input.form-control(type="email" placeholder="Email")
          p
            label(for="message") Message
            br
            input.form-control(type="textarea" placeholder="Message")
          button.btn.btn-default.form-control(type="submit") Submit
  include ../../includes/footer.jade  
